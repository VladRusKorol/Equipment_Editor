@model List<Equipment_Type>
<div style="margin-bottom:25px">
    <a asp-controller="EquipmentTypes" asp-action="AddPage" class="aAddBtn">
        Добавить
    </a>
</div>
@if (Model.Count > 0){
    <table>
        <colgroup>
            <col span="1" style="width: 10%;">
            <col span="1" style="width: 50%;">
            <col span="1" style="width: 20%;">
            <col span="1" style="width: 20%;">
        </colgroup>
        <tr>
            <th>№ П/П</th>
            <th>Название</th>
            <th>Активность</th>
            <th>Дейставия</th>
        </tr>
        @{int i = 1;}
        @foreach (var item in Model){
            <tr class="@(@item.IsActive ? "green" : "grey")">
                <td class="table-col-id">
                    <span>@i</span>
                    @{i++;}
                </td>
                <td class="table-col-Name">@item.Name</td>
                <td class="table-col-state">@if (@item.IsActive) { <span>Включен</span> } else { <span>Выключен</span> } </td>
                <td class="table-col-action">
                    <a asp-controller="EquipmentTypes" asp-action="Delete" asp-route-id="@item.Id" class="aDelBtn">
                        Удалить
                    </a>
                    <a asp-controller="EquipmentTypes" asp-action="EditPage" asp-route-id="@item.Id" class="aEditBtn">
                        Править
                    </a>
                </td>
            </tr>
            }
        </table>
    }
    else {
        <div class="div-with-empty-msg">Нет данных, добавьте оборудование...</div>
    }

